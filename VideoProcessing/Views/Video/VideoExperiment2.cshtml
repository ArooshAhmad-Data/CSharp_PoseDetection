@{
    ViewBag.Title = "Video Experiment2";
}

<div class="d-flex justify-content-around">
    <div>
        <div>
            <canvas id="frameCanvas" width="640" height="360" style="background-color:black;"></canvas>
            <div class="mt-3 mb-3 text-center" id="loadingIndicator" style="display:none"> <b>Extracting Video Frames...</b> </div>
            <div id="processingLoader" class="loading-overlay" style="display:none;">
                <div class="loading-spinner"></div>
                Please wait, processing frame...
            </div>
        </div>
        <input class="form-control" type="file" id="videoInput" accept="video/*" />
        <div id="thumbnailSlider" class="d-flex justify-content-around mt-3">
            <div id="thumbnailContainer" class="thumbnail-container" style="max-width:640px;"></div>
        </div>
        <div class="d-flex justify-content-around mt-3" style="display:none;">
            <button id="prevButton" class="btn btn-primary" disabled style="display:none;"> Previous Frame </button>
            <button id="nextButton" class="btn btn-danger" disabled style="display:none;"> Next Frame </button>
        </div>
    </div>
</div>

<script async src="~/js/opencv.js" type="text/javascript"></script>
<script async src="~/js/video.js" type="text/javascript"></script>